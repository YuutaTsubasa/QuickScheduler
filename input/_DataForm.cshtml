<style>
    .data_form {
        display: flex;
        flex-direction: column;
        padding: 15px;
        margin: 10px;
        align-items: center;
        background-color: rgb(38, 38, 38);
        border-radius: 20px;
    }

    .input_field {
        margin-bottom: 15px;
        font-size: 15pt;
        color: rgb(190, 190, 190);
        width: 80%;
    }

    .input_field label {
        display: inline-block;
        padding-left: 10px;
        padding-right: 10px;
        margin-bottom: 5px;
    }

    
    .day_setting, .community_setting {
