    .day_setting .input_field, .community_setting .input_field {
        width: 95%;
        color: rgb(38, 38, 38);
    }

    .input_field select, .input_field input {
        height: 40px;
        font-size: 13pt;
        border: 0px;
        background-color: rgb(228, 228, 228);
        padding: 5px 15px;
        width: 100%;
        margin-top: 5px;
    }

    .overflow_hidden{
        overflow: hidden;
    }
